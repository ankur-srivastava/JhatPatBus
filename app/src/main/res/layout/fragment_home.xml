<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edocent.jpbapplication.BookFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeHomeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp"
        android:textColor="@color/westeros_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        >

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromLocationId"
            android:hint="From"
            android:layout_margin="20dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toLocationId"
            android:hint="To"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/travelDateId"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/CustomEditTextStyle"
        android:gravity="center"
        android:hint="Select Travel Date"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:layout_marginBottom="40dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findBusId"
        android:text="Find Bus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="@color/westeros_red"
        />

</LinearLayout>